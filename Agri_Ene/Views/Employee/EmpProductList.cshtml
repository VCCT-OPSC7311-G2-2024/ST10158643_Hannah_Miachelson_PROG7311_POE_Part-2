                    <td style="white-space:nowrap">
                       <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Details" asp-route-id="@product.prodId">
                            View
                        </a>
                    </td>
                </tr>
            } *@
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
