@model Product

<!-- CSS Styles -->
<style>
    /* Primary button styles */
    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }

    /* Primary button with outline styles */
    .btn-outline-primary {
        background-color: #9FC98D;
        border-color: #4CAF50;
        color: white;
    }

        /* Hover effect for primary outline button */
        .btn-outline-primary:hover {
            background-color: #4CAF50;
            border-color: #4CAF50;
            color: white;
        }

    /* Secondary button with outline styles */
    .btn-outline-secondary {
        border-color: #9FC98D;
        color: #9FC98D;
    }

        /* Hover effect for secondary outline button */
        .btn-outline-secondary:hover {
            background-color: #4CAF50;
            border-color: #4CAF50;
            color: white;
        }

    /* Additional styles for primary button on hover, focus, active, and dropdown */
    .btn-primary:hover,
    .btn-primary:focus,
    .btn-primary:active,
    .btn-primary.active,
    .open > .dropdown-toggle.btn-primary {
        background-color: #45A049;
        border-color: #45A049;
        color: white;
    }

    /* Styling for forum image */
    .forum-img {
        width: 100px;
        height: 96px;
        object-fit: cover;
    }

    /* Styling for forum text */
    .forum-text {
        color: black;
    }

    /* Styling for forum label */
    .forum-label {
        color: black;
    }

    /* Background container styles */
    .background-container {
        background-image: url('/style_extra/h5.jpg');
        background-position: center;
        position: relative;
        padding: 20px;
        margin-right: -89px;
        margin-left: -90px;
        margin-top: -18px;
        margin-bottom: -20px;
    }

    /* Background tint styles */
    .background-tint {
        background-color: rgba(0, 0, 0, 0.5); 
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    /* Content container styles */
    .content-container {
        position: relative;
        z-index: 1;
        color: white; 
    }

    /* Dropdown icon styles */
    .dropdown-icon {
        width: 16px; 
        height: 16px; 
    }
</style>

<!-- HTML Content -->
<div class="background-container">
    <div class="background-tint"></div>
    <div class="content-container">
        <form method="post" asp-action="Create">
            <div class="row">
                <div class="col-lg-6 mx-auto rounded border p-3" style="background-color: rgba(159, 201, 141, 0.7); margin-top: 20px">
                    <!-- Header -->
                    <h2 class="text-center m-3">Create New Product</h2>
                    <hr />

                    <!-- Product Name Input -->
                    <div class="col-12">
                        <label asp-for="prodName" class="form-label">Product Name</label>
                        <div class="input-group has-validation">
                            <input asp-for="prodName" type="text" class="form-control" id="productName" placeholder="Product Name" required>
                            <div class="invalid-feedback">
                                A product name is required.
                            </div>
                        </div>
                    </div>

                    <!-- Product Description Input -->
                    <div class="col-12">
                        <label asp-for="prodDescription" class="form-label">Description</label>
                        <input asp-for="prodDescription" type="text" class="form-control has-validation" placeholder="Product Description" required>
                        <div class="invalid-feedback">
                            A product category is required.
                        </div>
                    </div>

                    <!-- Product Category Input -->
                    <div class="col-12">
                        <label asp-for="prodCategory" class="form-label">Category<span class="text-body-secondary"> (Please select from drop down )</span></label>
                        <select asp-for="prodCategory" class="form-select" asp-items="Html.GetEnumSelectList<Agri_Ene.Data.ProductCategories>()">
                            <option value="" disabled selected>Category</option>
                            <option value="">None</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid category.
                        </div>
                    </div>

                    <!-- Production Date Input -->
                    <div class="col-12">
                        <label asp-for="productionDate" class="form-label">Production Date</label>
                        <div class="input-group has-validation">
                            <input asp-for="productionDate" type="date" class="form-control" id="productionDate" name="ProductionDate" required max="9999-12-31">
                            <div class="invalid-feedback">
                                A production date is required.
                            </div>
                        </div>
                    </div>

                    <!-- Create Button -->
                    <hr class="my-4">
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>
