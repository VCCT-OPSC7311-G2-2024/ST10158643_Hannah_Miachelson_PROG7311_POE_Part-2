@model IEnumerable<Product>
@using Agri_Ene.ViewModel
@{    
    var userDetails = ViewData["Farmer"] as Agri_Ene.ViewModel.UserDetailsVM;
    var cat = ViewData["Farmer"] as AgriUser;

}
<!-- Define CSS styles -->
<style>
    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
    }

    .btn-outline-primary {
        background-color: #9FC98D;
        border-color: #4CAF50;
        color: white;
    }

        .btn-outline-primary:hover {
            background-color: #4CAF50;
            border-color: #4CAF50;
            color: white;
        }

    .btn-outline-secondary {
        border-color: #9FC98D;
        color: #9FC98D;
    }

        .btn-outline-secondary:hover {
            background-color: #4CAF50;
            border-color: #4CAF50;
            color: white;
        }

    .btn-primary:hover,
    .btn-primary:focus,
    .btn-primary:active,
    .btn-primary.active,
    .open > .dropdown-toggle.btn-primary {
        background-color: #45A049;
        border-color: #45A049;
        color: white;
    }

    .forum-img {
        width: 100px;
        height: 96px;
        object-fit: cover;
    }

    .forum-text {
        color: black;
    }

</style>
<!-- Banner Section -->
<div class="banner-image d-flex align-items-center justify-content-center text-center" style="background-image: url('/style_extra/e1.jpg'); width: 100vw; height: 400px; background-size: cover; background-position: center; margin-left: -100px; margin-top:-18px; position: relative;">
    <!-- Overlay -->
    <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>
    <!-- Text Container -->
    <div class="text-container" style="text-align: center; position: relative; z-index: 2;">
        <h2 class="display-5 link-body-emphasis" style="color: white;">Howdy there, Farmer!</h2>
        <p class="lead text-white" style="line-height: 1.5; margin-bottom: -10px;">Welcome to your Agri-Energy product page</p>
        <p class="lead text-white" style="line-height: 1.5; padding-top: 10px;">Here, you can see all of your posted product listings. Keep up the great work!</p>
        <!-- Buttons -->
        <p>
            <a class="btn btn-primary" type="button" asp-area="" asp-controller="Product" asp-action="Create">Create New Product</a>
            <a class="btn btn-outline-secondary" type="button" asp-area="" asp-controller="Product" asp-action="FilterList">See List View</a>
        </p>
    </div>
</div>

<br />

<!-- User Profile Card -->
<div class="card col-md-12 h-100 p-2 rounded-3" style="background-color: rgba(159, 201, 141, 0.7); color: white;">
    <div class="card-header">
        <h2 class="display-6 "> User Profile</h2>
    </div>
    <div class="card-body px-4">
        <h5 class="card-title h-100 p-1">
            <!-- User Profile Information -->
            <p class="card-text"> Name: @userDetails.FirstName @userDetails.LastName</p>
            <p class="card-text">Email: @userDetails.Email</p>
            <p class="card-text">Phone: @userDetails.PhoneNumber</p>
            <p class="card-text">Product listings: @userDetails.Products.Count</p>
        </h5>
    </div>
</div>
<br />

<!-- Product Listings -->
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <!--foreach product within the model -->
            @foreach (var product in Model)
            {
                <div class="col" style="margin-bottom:15px">
                    <!-- Product Card -->
                    <div class="card h-100 mb-4 rounded-3 shadow-sm d-flex flex-column">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">@product.prodCategory</h4>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h2 class="card-title pricing-card-title"> @product.prodName</h2>
                            <ul class="list-unstyled mt-3 mb-4">
                                <!-- Product Details -->
                                <li>@product.prodDescription</li>
                                <li>Production Date: @product.productionDate?.ToString("yyyy-MM-dd")</li>
                            </ul>
                            <!-- View Button -->
                            <button type="button" class="w-100 btn" style="background-color: rgba(159, 201, 141, 0.7); color: white;">View</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
