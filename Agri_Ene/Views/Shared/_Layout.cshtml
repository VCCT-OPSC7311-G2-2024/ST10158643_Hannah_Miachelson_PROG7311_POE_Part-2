<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agri_Ene</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Agri_Ene.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: rgba(80, 29, 0, 0.5);">
            <div class="container-fluid">
                <a class="navbar-brand pl-10" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/style_extra/logo2.png")" alt="Logo" style="height: 66px; margin-right: 10px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-white">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer id="sticky-footer" class="flex-shrink-0 py-4 text-white-50" style="background-color: rgba(80, 29, 0, 0.5);">
        <div class="d-flex flex-column">
            <div id="page-content">
                <div class="container text-center">
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            <p class="lead text-white-50">Explore sustainable farming solutions with Agri Energy - your premier platform for green energy agriculture!</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container text-center">
                <small>&copy; 2024-<span class="font-italic">AgriEnergy</span> | All Rights Reserved | <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a></small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
